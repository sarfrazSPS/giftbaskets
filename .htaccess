
RewriteEngine on

RewriteOptions inherit

<IfModule mod_rewrite.c>
	RewriteCond %{HTTPS} off [OR]
	RewriteCond %{HTTP_HOST} ^www\.padutchbaskets\.com [NC]
	RewriteRule (.*) https://padutchbaskets.com/$1 [L,R=301]
</IfModule>


RewriteEngine On 
RewriteBase /
RewriteRule ^(.*)\.html$ $1.php [L,R]

# Redirect to 404.php if resource is not found
ErrorDocument 404 /404.php


# Check if the file exists and does not redirect further
# Exclude specific redirected pages RewriteCond %{REQUEST_URI} !^/redirected-page [NC]

# Match any request ending with .php and redirect to the non-.php version
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[\s?] [NC]
RewriteRule ^(.*)\.php$ /$1 [L,R=301]

# Internally rewrite non-.php URLs to their corresponding .php file
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^([^/]+)$ /$1.php [L]

